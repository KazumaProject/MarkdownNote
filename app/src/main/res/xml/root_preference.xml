<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/backup_string">
        <Preference
            android:key="@string/backup_save_preference"
            android:title="@string/start_backup"
            />
        <Preference
            android:key="load_backup_txt"
            android:title="@string/load_backup"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Syntax">
        <ListPreference
            android:key="edit_text_syntax_mode_preference"
            android:entries="@array/syntax_language"
            android:entryValues="@array/syntax_language_values"
            android:title="@string/list_prefrence_description"
            android:defaultValue="2"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">
        <Preference
            android:key="open_source_preference_key"
            android:title="Open source licenses"
            android:summary="License details for open source software"/>
    </PreferenceCategory>

</PreferenceScreen>