<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create_edit.CreateEditFragment"
    android:weightSum="20"
    android:orientation="vertical">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/change_emoji_parent_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:shape_roundRect_borderColor="@color/emoji_chooser_boarder_color"
        app:shape_roundRect_borderWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/window_bg_color"
            android:baselineAligned="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choose_emoji_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/emoji_chooser_bg_color"
                >

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choose_emoji_description_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@color/emoji_chooser_description_text_bg_color"
                >

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </io.github.florent37.shapeofview.shapes.RoundRectView>

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="20dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:shape_roundRect_borderColor="@color/emoji_chooser_boarder_color"
        app:shape_roundRect_borderWidth="1dp"
        android:elevation="2dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/markdown_bg_color">

        </ScrollView>
    </io.github.florent37.shapeofview.shapes.RoundRectView>

</LinearLayout>