<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/drawer_child_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inbox"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/drawer_child_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_notes"
        android:textColor="@color/text_color_sub1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_child_icon"
        app:layout_constraintStart_toEndOf="@+id/drawer_child_icon"
        app:layout_constraintTop_toTopOf="@+id/drawer_child_icon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/drawer_child_item_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>